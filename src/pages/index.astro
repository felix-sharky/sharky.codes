---
import Card from '@wing/components/Card.astro';
import Footer from '@wing/components/Footer.astro';
import Friends from '@wing/components/Friends.astro';
import InfoSection from '@wing/components/InfoSection.astro';
import Label from '@wing/components/Label.astro';
import Projects from '@wing/components/Projects.astro';
import ToolListCard from '@wing/components/ToolListCard.astro';
import Layout from '@wing/layouts/Layout.astro';
---

<Layout title="sharky.codes - Home" description="24 year old developer from Berlin, Germany">
	<Card id="about">
		<Label>About</Label>

		<h1>Hello, I'm Felix</h1>
        Im a 24 year old developer from Berlin, Germany.
        <p />
        I love building services and applications that are useful and fun to use.
        <br />My main focus is Integrations, APIs and Backend development.
		<p />
        When Im not coding, I like to play video games, do photography or just hang out with friends.
        <p />
		<InfoSection />
	</Card>

	<div class="projects">
		<Label>Projects</Label>
		<Projects />
	</div>

    <ToolListCard />

	<Card id="friends">
		<Label>Friends</Label>
		<Friends />
	</Card>

	<Footer />
</Layout>

<style>
	.projects {
		display: flex;
		flex-direction: column;
		gap: 1em;
	}
</style>
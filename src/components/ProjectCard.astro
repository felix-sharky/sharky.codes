---
import Card from "./Card.astro";
import colors from "@wing/assets/langColors.json";

import Star from "../../public/icons/star.svg"

const {
    name,
    description,
    language,
    owner,
    stargazers_count,
    html_url,
    homepage
} = Astro.props;

const stars =
    stargazers_count > 1000 ? `${(stargazers_count / 1000).toFixed(1)}k` : stargazers_count;

const pageURL = homepage && homepage !== "" ? homepage : html_url;

const avatarUrl = new URL(owner.avatar_url);
avatarUrl.searchParams.set("size", "64");

const langColor = colors[language as keyof typeof colors] || "#000" 
---

<Card class="repoCard" data-url={html_url}>
    <div class="author">
        <img src={avatarUrl.toString()} width="20px" />

        {owner.login}
    </div>
    
    <p class="name">{name}</p>
    <span class="description">{description}</span>

    <div class="meta">
        <div>
            <Star size="14px" class="star" />
            <p>{stars}</p>
        </div>

        <div>
            <span class="lang" style=`--langColor:${langColor}` />
            <p>{language}</p>
        </div>
    </div>

    <a
        href={homepage}
        class="homepage-btn"
        target="_blank"
        rel="noopener noreferrer"
        style={homepage ? "" : "display:none"}
        data-umami-event="project_page_click"
        data-umami-event-url={homepage}
    >
        Visit Site
    </a>
</Card>

<script>
    document.querySelectorAll(".repoCard").forEach(e => {
        e.addEventListener("click", () => {
            // @ts-ignore
            window.open(e.dataset.url, "_blank");
            // @ts-ignore
            umami.track("project_repo_click", {
                // @ts-ignore
                url: e.dataset.url
            });
        })
    })

    // Add event listeners to homepage buttons to stop propagation
    document.querySelectorAll(".homepage-btn").forEach(btn => {
        btn.addEventListener("click", (event) => {
            event.stopPropagation();
        })
    })
</script>

<style lang="scss">
    :global(.repoCard) {
        transition: scale 0.2s;
        cursor: pointer;
        position: relative;

        &:hover {
            scale: 1.01;
        }
    }

    .author {
        display: flex;
        align-items: center;
        gap: 0.6em;
        font-size: 13px;
        color: var(--onSurfaceAlt);

        img {
            border-radius: 25%;
        }
    }

    .name {
        margin: 0.6em 0;
        font-size: 18px;
        font-weight: 500;
        color: var(--onSurface);
    }

    .description {
        margin-top: 0.2em 0;
        font-size: 14px;
        color: var(--onSurfaceAlt);
    }

    .meta {
        display: flex;
        align-items: center;
        margin-top: 1em;
        gap: 1em;
        line-height: 14px;
        bottom: 1em;

        div {
            display: flex;
            align-items: center;
            gap: 0.4em;
        }

        p {
            margin: 0;
            font-size: 14px;
            color: var(--onSurfaceAlt);
        }
        
        .star {
            color: var(--star);
        }

        .lang {
            width: 14px;
            height: 14px;
            background-color: var(--langColor, var(--onSurfaceAlt));
            border-radius: 50%;
        }
    }

    .homepage-btn {
        position: absolute;
        right: 1em;
        bottom: 1em;
        padding: 0.5em 1em;
        background-color: var(--secondaryContainer);
        color: var(--onSecondaryContainer);
        border: none;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        text-decoration: none;
        box-shadow: 0 1px 2px 1px rgba(0, 0, 0, 0.2);
        transition: scale 0.2s, box-shadow 0.2s;

        &:hover {
            scale: 1.02;
            box-shadow: 0 1px 3px 1px rgba(0, 0, 0, 0.2);
        }
    }
</style>
